<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InformacoesConexao">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        >
        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="15dp"
            android:elevation="3dp"
            app:cardBackgroundColor="@color/colorWhite">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="?android:selectableItemBackground">
                <RelativeLayout
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"
                    android:gravity="center">
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SSID"
                        android:textColor="@color/colorBlack"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:id="@+id/ssidTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SSID da rede."/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="15dp"
            android:elevation="3dp"
            app:cardBackgroundColor="@color/colorWhite">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="?android:selectableItemBackground">
                <RelativeLayout
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"
                    android:gravity="center">
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Endereço IP"
                        android:textColor="@color/colorBlack"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:id="@+id/ipTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ip da rede."/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="15dp"
            android:elevation="3dp"
            app:cardBackgroundColor="@color/colorWhite">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="?android:selectableItemBackground">
                <RelativeLayout
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"
                    android:gravity="center">
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Máscara de MAC"
                        android:textColor="@color/colorBlack"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:id="@+id/macAddressTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mac da rede."/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="15dp"
            android:elevation="3dp"
            app:cardBackgroundColor="@color/colorWhite">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="?android:selectableItemBackground">
                <RelativeLayout
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"
                    android:gravity="center">
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Frequência"
                        android:textColor="@color/colorBlack"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:id="@+id/freqTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Frequência da rede."/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="15dp"
            android:elevation="3dp"
            app:cardBackgroundColor="@color/colorWhite">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="?android:selectableItemBackground">
                <RelativeLayout
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"
                    android:gravity="center">
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Velocidade"
                        android:textColor="@color/colorBlack"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:id="@+id/velocidadeTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Download."
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:id="@+id/velocidadeTv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload."/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>