<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="20dp"
    android:background="@drawable/bg_ui_second">

    <ImageView
        android:id="@+id/logoMainActivity"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:src="@drawable/app_logo_splash_white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@id/logoMainActivity"
        android:layout_marginTop="25dp">

        <Button
            android:id="@+id/botao_iniciar_sessao"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Iniciar SessÃ£o"
            android:textColor="@color/colorAccent"
            android:background="@drawable/bg_ui_white"
            android:backgroundTint="@color/white"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/botao_registar"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Registar-me"
            android:textColor="@color/colorAccent"
            android:background="@drawable/bg_ui_white"
            android:backgroundTint="@color/white"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
</RelativeLayout>